{
  "plugins": ["plugins/markdown"],
  "markdown": {
    "parser": "gfm",
    "hardwrap": true
  },
  "source": {
    "include": "./interface/"
  },
  "opts": {
    "template": "./out/src/",
    "destination": "./out/doc/",
    "recurse": true,
    "readme": "./README.md",
    "package": "./package.json"
  },
  "template": {
    "title": "eo.whatwg-streams",
    "description": "WHATWG Streams API",
    "stylesheet": ["hoge.css"],
    "javascript": ["hoge.js"]
  }
}
